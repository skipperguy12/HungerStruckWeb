.navbar.navbar-default
  .navbar-header
    %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", :type => "button"}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{:href => "/"} HungerStruck

  .navbar-collapse.collapse.navbar-responsive-collapse
    %ul.nav.navbar-nav
      %li{:class => (current_page?("") ? "active" : nil )}
        %a{href: "#"}
          %i.fa.fa-book
          About
    %ul.nav.navbar-nav
      %li{:class => (params[:controller].starts_with?("mongoid_forums") && !params[:controller].starts_with?("mongoid_forums/admin") ? "active" : nil )}
        %a{href: "#{main_app.mongoid_forums_path}"}
          %i.fa.fa-comments
          Forum
      - if mongoid_forums_user && mongoid_forums_user.mongoid_forums_admin?
        %li{:class => (params[:controller].starts_with?("mongoid_forums/admin") ? "active" : nil )}
          %a{href: "#{mongoid_forums.admin_root_path}"}
            %i.fa.fa-database
            Admin

    %ul.nav.navbar-nav.navbar-right
      - if current_user.present?
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "javascript:void(0)"}
            %i.fa.fa-exclamation-circle{style: (@alerts && !@alerts.empty? ? "color:red;" : "") }
          %ul.dropdown-menu{role: "menu"}
            - if @alerts == nil || @alerts.empty?
              %li
                %a{href: "#"}
                  You have no unread alerts!
            - elsif @alerts
              - @alerts.take(10).each do |al|
                %li
                  - topic = MongoidForums::Post.find(al.mongoid_forums_topic_post_id).topic
                  = link_to al.text, al.link
              - if @alerts.size > 10
                %li
                  %a
                    And #{@alerts.size - 10} more...
      - if current_user
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "javascript:void(0)"}
            =current_user.email
            %b.caret
          %ul.dropdown-menu
            %li
              =link_to "Edit account", main_app.edit_user_registration_path
            %li.divider
            %li
              =link_to('Logout', main_app.destroy_user_session_path, :method => :delete)
      - else
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "javascript:void(0)"}
            %span.glyphicon.glyphicon-user{"aria-hidden" => "true"}
            %b.caret
          %ul.dropdown-menu
            %li
              =link_to "Sign in", main_app.new_user_session_path
            %li
              =link_to "Sign up", main_app.new_user_registration_path
